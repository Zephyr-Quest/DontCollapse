<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Zephyr Studio" />

    <link rel="stylesheet" href="CSS/lobby.css" />
    <title>Don't Collapse | Lobby</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=KoHo:wght@300&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/png" sizes="16x16" href="img/ZephyrStudio_logo.png" />

    <!-- HTTP JS module -->
    <script src="JS/http.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- JS modules -->
    <script src="JS/http.js" type="text/javascript"></script>
</head>

<body>
    <main>
        <h1>Welcome</h1>

        <!-- Scoreboard -->
        <section class="scoreboard" id="scoreboard">
            <h2>
                <ion-icon name="help"></ion-icon>SAY MY NAME !
            </h2>
            <label for="pseudo_input">My pseudo</label>
            <input type="text" name="pseudo" placeholder="TheTK78" id="pseudo_input" />
        </section>

        <hr />

        <!-- Waiting player -->
        <nav class="games" id="games">
            <h2>
                <ion-icon name="game-controller"></ion-icon>All waiting players :
            </h2>

            <!-- Button to host a new game -->
            <div class="card" id="new_game" title="Click to host your own game">
                <ion-icon name="globe-outline"></ion-icon>
                <h3>Host my own game</h3>
            </div>
            <section id="games-display"></section>
        </nav>
    </main>

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!-- Logout -->
    <script src="JS/lobby.js" type="text/javascript"></script>

</body>

</html>