<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Zephyr Studio" />

    <link rel="stylesheet" href="CSS/lobby.css" />
    <title>Don't Collapse | Lobby</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=KoHo:wght@300&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/png" sizes="16x16" href="img/ZephyrStudio_logo.png" />

    <!-- JS modules -->
    <script src="JS/http.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js"></script>

</head>

<body>
    <main>
        <h1>Bienvenue sur le Lobby</h1>

        <!-- Scoreboard -->
        <section class="scoreboard" id="scoreboard">
            <div id="pseudo">
                <label for="pseudo_input">
                    <h2>Pseudo :</h2>
                </label>
                <div style="display:flex;flex-direction:column;">
                    <input maxlength="12" minlength="3" type="text" name="pseudo" placeholder="Pseudo" id="pseudo_input" autofocus />
                    <span class="error_msg_pseudo">Le pseudo doit être de longueur supérieur à 3 et inférieure à 12</span>
                </div>
            </div>
        </section>

        <hr/>

        <!-- Waiting player -->
        <nav class="games" id="games">
            <h2>
                <ion-icon name="game-controller"></ion-icon>Joueurs en attente :
            </h2>

            <!-- Button to host a new game -->
            <div class="card" id="new_game" title="Cliquer pour créer une partie">
                <ion-icon name="globe-outline"></ion-icon>
                <h3>Créer une partie</h3>
            </div>
            <section id="games-display"></section>
        </nav>
    </main>

    <!-- Ionicons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <!-- Logout -->
    <script src="JS/lobby.js" type="text/javascript"></script>
</body>

</html>